{
  "name": "klaviyo-react-native-sdk",
  "version": "0.1.0",
  "description": "Official Klaviyo React Native SDK",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "docs",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace klaviyo-react-native-sdk-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-pattern 'docs/**' && ktlint '**/*.kt' '!**/node_modules/**' '!**/docs/**' && swiftlint",
    "lint-fix": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-pattern 'docs/**' --fix && ktlint '**/*.kt' '!**/node_modules/**' '!**/docs/**' -F && swiftlint --fix ",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,yml}'",
    "generate-docs": "typedoc src"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.swift": "swiftlint --fix",
    "*.kt": "ktlint '**/*.kt' '!**/node_modules/**' -F",
    "*.{js,jsx,ts,tsx,json,md,yml}": "prettier --write"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "klaviyo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klaviyo/klaviyo-react-native-sdk.git"
  },
  "author": "Mobile Push <mobile-push@klaviyo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/klaviyo/klaviyo-react-native-sdk/issues"
  },
  "homepage": "https://github.com/klaviyo/klaviyo-react-native-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.72.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^28.1.1",
    "lint-staged": "^15.2.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-native": "0.73.1",
    "react-native-builder-bob": "^0.23.2",
    "release-it": "^15.0.0",
    "turbo": "^1.10.7",
    "typedoc": "^0.25.7",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNKlaviyoReactNativeSdkSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  }
}
